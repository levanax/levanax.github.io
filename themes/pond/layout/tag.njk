{% extends 'includes/layout.njk' %}

{% block body %}
<div class="card">
<div class="card-content">
  <div id="tag" class="tag-view">
    <h1>{{ page.tag }}</h1>
    {% for article in page.posts.toArray() %}
      <div class="tag-item">
        {% if article.link %}
          <a href="{{ url_for(article.link) }}" target="_blank">
            {{ article.title or 'No Title' }}
          </a>
        {% else %}
          <a href="{{ url_for(article.path) }}">
            {{ article.title or 'No Title' }}
          </a>
        {% endif %}

        <time datetime="{{ date_xml(article.date) }}">
          {{ date(article.date) }}
        </time>
      </div>
    {% endfor %}
  </div>
  </div>
  </div>

  {% include 'includes/pagination.njk' %}
{% endblock %}
